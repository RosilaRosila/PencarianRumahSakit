<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/backgorund">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rs"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="SILAHKAN PILIH RUMAH SAKIT "
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_rst"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="#FF018786"
            android:drawableLeft="@drawable/ic_baseline_local_hospital_24"
            android:text="Rs Terdekat"
            />

        <Button
            android:id="@+id/btn_rskia"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#FF018786"
            android:drawableLeft="@drawable/ic_baseline_holiday_village_24"
            android:text="RSKIA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_rsj"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_home_work_24"
            android:backgroundTint="#FF018786"
            android:text="RSJ"
            />

        <Button
            android:id="@+id/btn_rsud"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_baseline_other_houses_24"
            android:backgroundTint="#FF018786"
            android:text="RSUD" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_lct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_edit_location_24"
            android:backgroundTint="#FF018786"
            android:text="Location"
           />

        <Button
            android:id="@+id/btn_lgt"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF018786"
            android:text="Logout"
            />

    </LinearLayout>




</RelativeLayout>
