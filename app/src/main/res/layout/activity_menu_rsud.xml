<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuRsudActivity"
    android:orientation="vertical"
    android:id="@+id/backgorund">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU RSUD"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button13"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="#FF018786"
            android:drawableTop="@drawable/ic_baseline_person_3_24"
            android:text="Jadwal Dokter" />

        <Button
            android:id="@+id/button14"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#FF018786"
            android:drawableTop="@drawable/ic_baseline_hotel_24"
            android:text="Fasilitas" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button15"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="#FF018786"
            android:drawableTop="@drawable/ic_baseline_phone_24"
            android:text="Contact"
            />

        <Button
            android:id="@+id/button16"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#FF018786"
            android:drawableTop="@drawable/ic_baseline_edit_location_24"
            android:text="Location" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_kmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF018786"
            android:drawableLeft="@drawable/ic_baseline_navigate_before_24"
            android:text="Back" />

        <Button
            android:id="@+id/btn_dfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF018786"
            android:layout_marginLeft="110dp"
            android:text="Daftar"/>
    </LinearLayout>


</LinearLayout>